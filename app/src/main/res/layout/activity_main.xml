<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="numberDecimal"
        android:text="0"
        android:textSize="30pt"
></EditText>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            >
            <Button
                android:id="@+id/buAC"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/buplusminus"
                android:text="+/-"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/budivide"
                android:text="/"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/bumultiply"
                android:text="*"
                android:layout_marginRight="1pt"
                android:onClick="operatorEvent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"

                ></Button>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:text="7"></Button>

            <Button
                android:id="@+id/bu8"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/bu9"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/buPercent"
                android:text="%"
                android:onClick="percentEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            >
            <Button
                android:id="@+id/bu4"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/bu5"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/bu6"
                android:text="6"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>

            <Button
                android:id="@+id/buPlus"
                android:text="+"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            >
            <Button
                android:id="@+id/bu1"
                android:text="1"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/bu2"
                android:text="2"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/bu3"
                android:text="3"
                android:layout_marginRight="1pt"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>
            <Button
                android:id="@+id/buMinus"
                android:text="-"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                ></Button>

        </TableRow>





    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            >

            <Button
                android:id="@+id/bu0"
                android:layout_width="173dp"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:text="0"></Button>
            <Button
                android:id="@+id/buDot"
                android:text="."
                android:textStyle="bold"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                ></Button>

            <Button
                android:id="@+id/buEqual"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="equalEvent"
                android:text="=" ></Button>


        </TableRow>


    </LinearLayout>


</LinearLayout>